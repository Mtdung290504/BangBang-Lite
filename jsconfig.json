{
    "compilerOptions": {
        "baseUrl": ".",
        "checkJs": true,
        "allowJs": true,
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "target": "es2022",
        // "strict": true, // ⬅️ Gợi ý thêm
        // "noEmit": true // ⬅️ Không xuất file, chỉ dùng để kiểm tra
    },
    "include": [
        "./**/*.js"
    ],
    "exclude": [
        "node_modules"
    ]
}