{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"allowJs": true,
		"checkJs": false,
		"baseUrl": "."
	},
	"include": ["**/*.ts", "**/*.js"],
	"exclude": ["node_modules"]
}
